#!/usr/bin/env bash

get_scala_versions() {
curl -s https://www.scala-lang.org/download/all.html \
  | grep '/download.*Scala' \
  | grep -v 'develop' \
  | sed -e 's|.*download/\(.*\)\.html.*|\1|'
}

if [[ "$(uname)" == "Darwin" ]]; then
  get_scala_versions | rev | tr "\n" " "
else
  get_scala_versions | tac | tr "\n" " "
fi
